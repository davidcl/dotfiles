[user]
    name = Cl√©ment DAVID
    email = clement.david@3ds.com
[grep]
    lineNumber = true
[hooks]
    astyle = /usr/bin/astyle
    xmlindent = /usr/bin/xmlindent
[diff]
    tool = meld
[push]
	default = current
	autoSetupRemote = true
[core]
    editor = vim
    attributesfile = ~/.gitattributes
    autocrlf = input
[gitreview]
    username = clement.david
[merge]
    tool = meld
[diff "image"]
    command = ~/.local/bin/git-imgdiff
[diff "zip"]
    textconv = unzip -c -a
[diff "odf"]
    textconv = ~/.local/bin/git-odftextconv
[diff "zcos"]
    textconv = ~/.local/bin/git-zcostextconv
[diff "hdf5"]
    textconv = /usr/bin/h5dump
[alias]
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    tree = log --graph --decorate --pretty=oneline --abbrev-commit
    st = status --porcelain
    ls = ls-files
    r61 = checkout -B 6.1 origin/6.1
    r62 = checkout -B master origin/master
    cob = checkout -B
[pull]
	rebase = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
    required = true

[init]
	defaultBranch = main
[rebase]
	autoStash = true
